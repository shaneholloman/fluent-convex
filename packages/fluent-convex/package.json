{
  "name": "fluent-convex",
  "version": "0.12.3",
  "description": "A fluent API builder for Convex functions with middleware support, inspired by oRPC",
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./zod": {
      "types": "./dist/zod/index.d.ts",
      "import": "./dist/zod/index.js"
    }
  },
  "files": [
    "dist",
    "src",
    "README.md",
    "LICENSE.txt"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "dev": "tsc -p tsconfig.build.json --watch",
    "typecheck": "tsc --noEmit",
    "test": "vitest run --typecheck",
    "dev:test": "vitest --typecheck",
    "prepublishOnly": "node -e \"require('fs').copyFileSync('../../README.md','README.md')\" && npm run build"
  },
  "keywords": [
    "convex",
    "orpc",
    "middleware",
    "fluent-api",
    "builder",
    "plugin",
    "typescript"
  ],
  "author": "Mike Cann",
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "homepage": "https://friendly-zebra-716.convex.site/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mikecann/fluent-convex.git"
  },
  "peerDependencies": {
    "convex": "^1.31.0",
    "zod": "^3.25.0 || ^4.0.0",
    "convex-helpers": ">=0.1.0"
  },
  "peerDependenciesMeta": {
    "zod": {
      "optional": true
    },
    "convex-helpers": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^25.0.0",
    "@vitest/ui": "^4.0.0",
    "convex": "^1.31.0",
    "convex-helpers": ">=0.1.0",
    "prettier": "^3.5.3",
    "typescript": "~5.9.0",
    "vitest": "^4.0.0",
    "zod": "^4.3.0"
  }
}
